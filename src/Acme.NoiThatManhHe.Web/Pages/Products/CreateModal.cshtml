@page
@model Acme.NoiThatManhHe.Web.Pages.Products.CreateModalModel
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using Acme.NoiThatManhHe.Web.Pages.Products
@{
    Layout = null;
}
<abp-dynamic-form abp-model="Product" asp-page="/Products/CreateModal">
    <abp-modal>
        <abp-modal-header title="New Product"></abp-modal-header>
        <abp-modal-body>
            <abp-form-content />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</abp-dynamic-form>
